{
  "name": "perfundo_demo",
  "description": "a pure CSS lightbox (Demo)",
  "version": "2.0.4",
  "author": "Markus Oberlehner",
  "license": "GPL v2",
  "dependencies": {
    "animate.css": "^3.5.1",
    "prismjs": "^1.4.1"
  },
  "devDependencies": {
    "avalanchesass_base_box_sizing_reset": "^3.0.0",
    "avalanchesass_base_typography": "^3.0.0",
    "avalanchesass_component_hn": "^3.0.0",
    "avalanchesass_object_grid": "^3.1.0",
    "avalanchesass_object_media": "^3.0.0",
    "autoprefixer": "^6.3.6",
    "browser-sync": "^2.12.8",
    "clean-css": "^3.4.17",
    "jshint": "^2.9.2",
    "node-sass": "^3.7.0",
    "node-sass-magic-importer": "^0.0.3",
    "normalize-scss": "^4.0.3",
    "onchange": "^2.4.0",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.5.2",
    "perfundo": "^2.0.4",
    "rollup": "^0.28.0",
    "rollup-plugin-buble": "^0.10.0",
    "rollup-plugin-commonjs": "^3.0.0",
    "rollup-plugin-node-resolve": "^1.7.0",
    "uglify-js": "^2.6.2"
  },
  "main": "js/index.js",
  "jshintConfig": {
    "esversion": 6,
    "browser": true
  },
  "scripts": {
    "styles:sass": "node-sass --source-map-embed --importer node_modules/node-sass-magic-importer --output dist scss/index.scss",
    "styles:postcss": "postcss --use autoprefixer --replace dist/*.css",
    "styles:minify": "cleancss --output dist/index.min.css dist/index.css",
    "styles": "npm run styles:sass && npm run styles:postcss && npm run styles:minify",
    "scripts:bundle": "rollup --config --sourcemap inline --format iife --output dist/index.js js/index.js",
    "scripts:minify": "uglifyjs --compress --output dist/index.min.js dist/index.js",
    "scripts:lint": "jshint js/index.js || exit 0",
    "scripts": "npm run scripts:bundle && npm run scripts:minify && npm run scripts:lint",
    "serve": "browser-sync start --server --files 'dist'",
    "watch:styles": "onchange 'scss/**/*.scss' -- npm run styles",
    "watch:scripts": "onchange 'js/**/*.js' -- npm run scripts",
    "watch": "parallelshell 'npm run serve' 'npm run watch:styles' 'npm run watch:scripts'"
  }
}
