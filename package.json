{
  "name": "perfundo",
  "description": "a pure CSS lightbox",
  "keywords": [
    "eyeglass-module",
    "sass"
  ],
  "version": "2.0.4",
  "author": "Markus Oberlehner",
  "homepage": "https://perfundo.oberlehner.net",
  "license": "GPL v2",
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "clean-css": "^3.4.17",
    "jshint": "^2.9.2",
    "node-sass": "^3.7.0",
    "onchange": "^2.4.0",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.5.2",
    "rollup": "^0.28.0",
    "rollup-plugin-buble": "^0.10.0",
    "rollup-plugin-commonjs": "^3.0.0",
    "rollup-plugin-node-resolve": "^1.7.0",
    "stylelint": "^6.6.0",
    "stylelint-config-standard": "^9.0.0",
    "uglify-js": "^2.6.2"
  },
  "main": "dist/perfundo.js",
  "jsnext:main": "js/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/maoberlehner/perfundo"
  },
  "bugs": {
    "url": "https://github.com/maoberlehner/perfundo/issues"
  },
  "eyeglass": {
    "sassDir": "scss",
    "exports": false,
    "needs": "^0.8.2"
  },
  "jshintConfig": {
    "esversion": 6,
    "node": true,
    "loopfunc": true,
    "browser": true
  },
  "scripts": {
    "styles:sass": "node-sass scss/index.scss dist/perfundo.css && node-sass scss/with-icons.scss dist/perfundo.with-icons.css",
    "styles:postcss": "postcss --use autoprefixer --replace dist/*.css",
    "styles:minify": "cleancss --output dist/perfundo.min.css dist/perfundo.css && cleancss --output dist/perfundo.with-icons.min.css dist/perfundo.with-icons.css",
    "styles:lint": "stylelint scss/**/*.scss --syntax scss || exit 0",
    "styles": "npm run styles:sass && npm run styles:postcss && npm run styles:minify && npm run styles:lint",
    "scripts:bundle": "rollup --config --format iife --name Perfundo --output dist/perfundo.js js/index.js",
    "scripts:minify": "uglifyjs --compress --output dist/perfundo.min.js dist/perfundo.js",
    "scripts:lint": "jshint js/index.js || exit 0",
    "scripts": "npm run scripts:bundle && npm run scripts:minify && npm run scripts:lint",
    "watch:styles": "onchange 'scss/**/*.scss' -- npm run styles",
    "watch:scripts": "onchange 'js/**/*.js' -- npm run scripts",
    "watch": "parallelshell 'npm run watch:styles' 'npm run watch:scripts'"
  }
}
